<div class="comment-form">


<%= form_for [@post, @comment] do |f| %>
    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :comment_text %>
    <%= f.text_field :comment_text %>

    <%= f.label :post_date %>
    <%= f.text_field :post_date %>

    <%= f.label :post_id %>
    <%= f.text_field :post_id %>

    <%= f.submit "Scribble Comment" %>

<% end %>
</div>
