
<%= form_for (@post) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :text %>
    <%= f.text_field :text %>

    <%= f.label :post_date %>
    <%= f.text_field :post_date %>

    <%= f.label :photo_url %>
    <%= f.text_field :photo_url %>

    <%= f.submit "Scribble" %>

<% end %>
