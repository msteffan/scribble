<h2><%= @post.title %></h2>
<h4>Scribbled by <%= @post.author + " on " + @post.post_date %></h4>
<%= image_tag src="#{@post.photo_url}" %>
<p>
    <%= @post.text %>
</p>

<%= link_to "Edit", edit_post_path %>


<h4>Comments <%=link_to "(+)", new_comment_path %></h4>

<% @post.comments.each do |comment| %>
    <div class="comment">
        <p>
            <%= comment.comment_text%>
        </p>
        <p>
            <%= comment.author + " on " + comment.post_date%>
            <%= link_to "(edit)", edit_comment_path(comment) %>
        </p>
    </div>
<% end %>
